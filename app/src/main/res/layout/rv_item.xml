<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/tv_image"
            android:src="@drawable/ic_baseline_adb_24"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:foregroundGravity="center"/>

        <TextView
            style="@style/ForBrand"
            android:id="@+id/tv_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="220dp"
            android:layout_marginBottom="38dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_image"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"/>

        <TextView
            style="@style/ForBarcode"
            android:id="@+id/tv_barcode"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_image"
            app:layout_constraintEnd_toEndOf="@+id/tv_brand_name"
            app:layout_constraintStart_toStartOf="@+id/tv_brand_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_brand_name"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_number"
            style="@style/ForBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/tv_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_image"
            app:layout_constraintTop_toTopOf="@+id/tv_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>